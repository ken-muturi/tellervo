<?xml version="1.0" encoding="UTF-8"?>
<grammar ns="" xmlns="http://relaxng.org/ns/structure/1.0">
    <start>
      <ref name="specimenObject"/>	
    </start>

    <define name="specimenObject" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
        <element name="specimen">
            <optional>
                <attribute name="id">
                    <data type="positiveInteger" />
                </attribute>
            </optional>
            <optional>
                 <attribute name="url">
                    <text />
                </attribute>
 			</optional>
            
            <interleave>
	            <optional>
	                <attribute name="createdTimeStamp">
	                    <data type="dateTime" />
	                </attribute>
	            </optional>
	
	            <optional>
	                <attribute name="lastModifiedTimeStamp">
	                    <data type="dateTime" />
	                </attribute>
	            </optional>
	
	            <optional>
	                <attribute name="name">
	                    <text />
	                </attribute>
	            </optional>
	            
	            <optional>
	                <attribute name="dateCollected">
	                    <data type="date" />
	                </attribute>
	            </optional>
	            
	            <optional>
	                <attribute name="specimenTypeID">
	                    <data type="positiveInteger" />
	                </attribute>
	            </optional>
	            
	            <optional>
	                <attribute name="terminalRingID">
	                    <text />
	                </attribute>
	            </optional>        
	            
	            <optional>
	                <attribute name="isTerminalRingVerified">
	                    <data type="boolean" />
	                </attribute>
	            </optional>
	            
	            <optional>
	                <attribute name="sapwoodCount">
	                    <data type="positiveInteger" />
	                </attribute>
	            </optional>         
	            
	            <optional>
	                <attribute name="isSapwoodCountVerified">
	                    <data type="boolean" />
	                </attribute>
	            </optional>  
	            
	            <optional>
	                <attribute name="specimenQualityID">
	                    <text />
	                </attribute>
	            </optional>         
	            
	            <optional>
	                <attribute name="isSpecimenQualityVerified">
	                    <data type="boolean" />
	                </attribute>
	            </optional>  
	            
	            <optional>
	                <attribute name="specimenContinuityID">
	                    <text />
	                </attribute>
	            </optional>
	            
	            <optional>
	                <attribute name="isSpecimenContinuityVerified">
	                    <data type="boolean" />
	                </attribute>
	            </optional>
	            
	            <optional>
	                <attribute name="pithID">
	                    <text />
	                </attribute>
	            </optional>         
	            
	            <optional>
	                <attribute name="isPithVerified">
	                    <data type="boolean" />
	                </attribute>
	            </optional>
	            
	            <optional>
	                <attribute name="unmeasuredPre">
	                    <data type="positiveInteger" />
	                </attribute>
	            </optional>
	            
	            <optional>
	                <attribute name="isUnmeasuredPreVerified">
	                    <data type="boolean" />
	                </attribute>
	            </optional>
	            
	            <optional>
	                <attribute name="unmeasuredPost">
	                    <data type="positiveInteger" />
	                </attribute>
	            </optional>
	            
	            <optional>
	                <attribute name="isUnmeasuredPostVerified">
	                    <data type="boolean" />
	                </attribute>	
	            </optional>
	
	            <optional>
	                <externalRef href="radius.rng" />
	            </optional> 
            </interleave>      
        </element>
    </define>
 </grammar>